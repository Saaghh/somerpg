             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:First_Build.View"
             mc:Ignorable="d" Width="200" Height="200">
    <Canvas HorizontalAlignment="Center" Height="200" VerticalAlignment="Center" Width="200">
        <Image x:Name="image" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Stretch="UniformToFill" Source="/First Build;component/Resources/ForestTile.png" Height="200" />
        <TextBlock x:Name="text" HorizontalAlignment="Center" Margin="0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Panel.ZIndex="2" Canvas.Left="75" Canvas.Top="92"/>
    </Canvas>
</UserControl>
