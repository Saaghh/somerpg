<UserControl x:Class="First_Build.CharacterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:First_Build"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="200" Height="200" Margin="0" BorderThickness="1">
    <Canvas HorizontalAlignment="Center" Height="200" Margin="0" VerticalAlignment="Center" Width="200">
        <Grid Width="200" Height="200" Panel.ZIndex="1">
            <TextBlock x:Name="textBlock" TextWrapping="Wrap" Panel.ZIndex="1" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Background="#7FFFFFFF"/>
        </Grid>
        <Image x:Name="image" Height="200" Width="200"/>
    </Canvas>
</UserControl>
