<UserControl x:Class="First_Build.View.BattleMapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:First_Build.View"
             mc:Ignorable="d" >
    <Canvas HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="200">
        <Polygon x:Name="polygon" Points="0,120 50,40 150,40 200,120 150,200 50,200" MouseUp="Polygon_MouseUp" Opacity="0.3" Panel.ZIndex="1000" Height="200" Width="200" Fill="IndianRed" MouseLeave="Polygon_MouseLeave" MouseEnter="Polygon_MouseEnter" />
    </Canvas>
</UserControl>
