<UserControl x:Name="___Без_имени_" x:Class="First_Build.CharacterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:First_Build"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="120" Height="80" Margin="0" BorderThickness="1">
    <UserControl.BorderBrush>
        <SolidColorBrush Color="#FF343434"/>
    </UserControl.BorderBrush>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="101*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <Button x:Name="button" Content="Attack" HorizontalAlignment="Center" Margin="0,30,19,30" VerticalAlignment="Center" Width="79" Click="Button_Click" Grid.Column="1"/>
        <Button x:Name="button_Copy" Content="Show HP" HorizontalAlignment="Center" Margin="0,55,19,5" VerticalAlignment="Center" Width="79" Click="Button_Click1" Grid.Column="1"/>

    </Grid>
</UserControl>
