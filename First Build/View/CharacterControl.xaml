<UserControl x:Class="First_Build.CharacterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:First_Build"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="120" Height="80" Margin="0">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="Attack" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="80" Click="Button_Click"/>
        <Button x:Name="button_Copy" Content="Show HP" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Center" Width="80" Click="Button_Click1"/>

    </Grid>
</UserControl>
